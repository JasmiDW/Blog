{% extends 'blog.html.twig' %}

    {% block content_blog %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card" >
            <div class="card-body">
                <h4 class="card-title">{{ articles.title }}</h4>
                <p class="card-text">{{ articles.content }}</p>
                <a href="{{ path( 'blog_edit_article', {'id' : articles.id} ) }}" class="btn btn-dark">Modifier</a>
                <a href="{{ path( 'blog_delete_article', {'id' : articles.id} ) }}" class="btn btn-secondary">Supprimer</a>
            </div>
        </div>
    {% endblock %}

