{% block left_menu %}
   {%  for article in articles %}
       <div class="card mb-3" style="width: 18rem;">
           <div class="card-body">
               <h5 class="card-title">{{ article.title }}</h5>
               <p class="card-text">{{ article.content }}</p>
               <a class="btn btn-dark"  href="{{ path("blog_view_article", {'id': article.id}) }}">Lien de l'article</a>
           </div>
       </div>
    {% endfor %}
{% endblock %}

